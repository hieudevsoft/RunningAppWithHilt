<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_payment"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    android:layout_marginHorizontal="@dimen/margin_36"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_12">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_32"
            android:layout_marginRight="@dimen/margin_32"
            android:adjustViewBounds="true"
            android:src="@drawable/img_payment_success" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_payment"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="-16dp"
            android:layout_marginRight="@dimen/margin_20"
            android:fontFamily="@font/svn_avo_bold"
            android:gravity="center_horizontal"
            android:text="Upgrade successful"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textSize18" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginRight="@dimen/margin_20"
            android:fontFamily="@font/svn_avo"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="@dimen/margin_6"
            android:text="@string/payment_success_content"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize14" />

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_below="@id/tv_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_16"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="22dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:fontFamily="@font/svn_avo_bold"
                android:paddingLeft="@dimen/margin_36"
                android:paddingRight="@dimen/margin_36"
                android:paddingBottom="@dimen/margin_2"
                android:textSize="@dimen/textSize15"
                android:text="Close"
                android:gravity="center"
                android:textColor="@color/white" />

        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>